{
  // ğŸ”’ Disable GitHub Copilot completely
  "github.copilot.enable": {"*":false},
  "github.copilot.inlineSuggest.enable": false,
  "github.copilot.editor.enableAutoCompletions": false,
  "chat.commandCenter.enabled": false, // Hide Copilot Chat UI (top bar + status bar)
  "chat.agent.enabled": false,
  "inlineChat.accessibleDiffView": "off",
  "terminal.integrated.initialHint": false,

  // ğŸ§¾ Git display and behavior
  "git.showUntrackedFiles": true,
  "git.untrackedChanges": "mixed",

  // ğŸ Python interpreter and terminal activation
  "python.defaultInterpreterPath": "${workspaceFolder}/venv/bin/python",
  "python.terminal.activateEnvironment": true,

  // ğŸ“ Explorer sorting and file exclusions
  "explorer.sortOrder": "filesFirst",
  "files.exclude": {
    "**/__pycache__": true,
    "**/*.pyc": true,
    "**/venv": true,
    "**/.devcontainer": true,
    "**/.history": true,
    "**/.vscode": true,
    "**/.git": true,
    "**/misc": true
  },

  // ğŸ—ºï¸ Editor UI preferences
  "editor.minimap.showSlider": "mouseover",

  // â–¶ï¸ Code Runner execution settings
  "code-runner.runInTerminal": true
}



